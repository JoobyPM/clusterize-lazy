{
    "compilerOptions": {
      "target": "ES2022",
      "module": "ESNext",
      "lib": ["DOM", "ES2022"],
      "moduleResolution": "Node",
      "strict": true,
      "declaration": true,
      "outDir": "dist",
      "skipLibCheck": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "allowImportingTsExtensions": true,
      "noEmit": false
    },
    "include": ["src/**/*"]
  }
